extends ../../layouts/default.pug

block main 
  h1(class="mb-4") Products

  table.table.table-hover.table-sm
    thead
      tr
        th Index
        th Images
        th Title
        th Price
        th Status
        th Action

    tbody
      tr 
        td 1
        td
          img(
            src="https://cdn.dummyjson.com/product-images/1/thumbnail.jpg"
            alt="Product 1"
            width="100px"
            height="auto"
          )
        td Product 1
        td 100$
        td
          a(href="#" class="badge badge-success") Active 
        td
          button(class="btn btn-warning btn-sm") Edit
          button(class="btn btn-danger btn-sm ml-1") Delete

      tr 
        td 2
        td
          img(
            src="https://cdn.dummyjson.com/product-images/2/thumbnail.jpg"
            alt="Product 2"
            width="100px"
            height="auto"
          )
        td Product 2
        td 150$
        td
          a(href="#" class="badge badge-danger") Inactive
        td
          button(class="btn btn-warning btn-sm") Edit
          button(class="btn btn-danger btn-sm ml-1") Delete 